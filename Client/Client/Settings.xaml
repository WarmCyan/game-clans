<Window x:Class="Client.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Settings" Height="180" Width="450" Background="#222222" TextOptions.TextFormattingMode="Display">
	<Grid>
		<StackPanel>
			<Border BorderBrush="#444444" BorderThickness="2" Grid.Row="1" Margin="10">
				<TextBlock TextAlignment="Center" Name="btnPassword" Background="#151515" Foreground="White" Padding="10" MouseLeave="btnPassword_MouseLeave" MouseEnter="btnPassword_MouseEnter" MouseUp="btnPassword_MouseUp">Set Password</TextBlock>
			</Border>
			<Label Name="lblVersion" Foreground="White" Margin="10" Content="Client Version 0.0.0"/>
			<Label Name="lblCopyright" Content="Copyright © 2016 Digital Warrior Labs" Foreground="White" Margin="10, 0"/>
		</StackPanel>
    </Grid>
</Window>
