<Window x:Class="Client.CreateGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
		Icon="Logo.ico"
        Title="Create Game" Height="200" Width="450" Background="#222222" TextOptions.TextFormattingMode="Display">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0">
			<Label Content="Game name:" Margin="20,20,20,0" Foreground="White" />
			<TextBox Name="txtGameName" Margin="20, 0, 20, 0" Padding="5" Foreground="White" Background="#111111" />
			<RadioButton Name="rbtnZendo" Margin="20" Foreground="White" IsChecked="True">Zendo</RadioButton>
		</StackPanel>
		<Border BorderBrush="#444444" BorderThickness="0,2,0,0" Grid.Row="1">
			<TextBlock TextAlignment="Center" Name="btnCreateGame" Background="#151515" Foreground="White" Padding="10" MouseLeave="btnCreateGame_MouseLeave" MouseEnter="btnCreateGame_MouseEnter" MouseUp="btnCreateGame_MouseUp">Create!</TextBlock>
		</Border>
	</Grid>
</Window>

